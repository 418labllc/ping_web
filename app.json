{
  "expo": {
    "name": "ping-rn",
    "slug": "ping-rn",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "pingrn",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "googleServicesFile": "./GoogleService-Info.plist",
      "infoPlist": {
        "NSCameraUsageDescription": "Allow Sub to use your camera to scan QR codes for help.",
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true,
          "NSAllowsArbitraryLoadsInWebContent": true
        }
      },
      "bundleIdentifier": "com.418labs.ping"
    },
    "android": {
      "googleServicesFile": "./google-services.json",
      "permissions": [
        "CAMERA",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.four18labs.ping"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/sub.png"
    },
    "plugins": [
      [
        "expo-router",
        {
          "origin": "https://www.gettpingapp.com"
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Ping to use your camera to scan QR codes for help."
        }
      ],
      [
        "expo-build-properties",
        {
          "ios": {
            "useFrameworks": "static"
          },
          "android": {
            "manifestApplicationAttributes": {
              "android:usesCleartextTraffic": "true"
            }
          }
        }
      ],
      "@react-native-firebase/app",
      "@react-native-firebase/auth"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
